<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"/>

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/detail_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/detail_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/detail_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/detail_menu_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/detail_rescan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/rescan_menu" />

        <TextView
            android:id="@+id/detail_favorites_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/favorites_section_title"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:textSize="15sp" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/favorite_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fav_safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_safe" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fav_try"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_try" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fav_avoid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite_avoid" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <Button
            android:id="@+id/fav_clear"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/favorite_clear" />

        <TextView
            android:id="@+id/detail_fav_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detail_notes_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/crowd_notes_title"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detail_notes_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/detail_note_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/crowd_notes_add_hint" />

            <Button
                android:id="@+id/detail_note_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/crowd_notes_add" />
        </LinearLayout>

        <TextView
            android:id="@+id/detail_gf_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/detail_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="?android:textColorSecondary"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>
