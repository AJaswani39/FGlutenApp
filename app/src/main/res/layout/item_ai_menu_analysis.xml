<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Item header with name and classification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Classification icon and text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:id="@+id/classification_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="âœ…"
                    android:textSize="18sp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/classification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="GF Safe"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Confidence score -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/item_confidence"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:max="100"
                    android:progress="85"
                    app:indicatorSize="32dp"
                    app:indicatorColor="?attr/colorPrimary"
                    app:trackThickness="3dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Item name -->
        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Gluten-Free Pasta with Bolognese"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold" />

        <!-- Item description -->
        <TextView
            android:id="@+id/item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="House-made gluten-free pasta with traditional meat sauce"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Reasoning text -->
        <TextView
            android:id="@+id/reasoning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Contains explicit gluten-free designation or dedicated preparation area"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="monospace" />

        <!-- Keywords and warnings (expandable) -->
        <LinearLayout
            android:id="@+id/keywords_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Keywords found -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Keywords Found:"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/keywords_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:chipSpacingHorizontal="6dp"
                app:chipSpacingVertical="6dp"
                app:singleLine="false"
                app:singleSelection="false" />

            <!-- Warnings -->
            <TextView
                android:id="@+id/warnings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Warnings:"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textStyle="bold"
                android:textColor="?attr/colorError"
                android:visibility="gone" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/warnings_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:chipSpacingHorizontal="6dp"
                app:chipSpacingVertical="6dp"
                app:singleLine="false"
                app:singleSelection="false"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Expand/collapse button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/expand_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Show Details"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
