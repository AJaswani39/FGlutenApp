<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FGlutenApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/purple_700</item>
        <item name="colorTertiaryContainer">@color/purple_200</item>
        <item name="colorOnTertiaryContainer">@color/black</item>
        <item name="colorError">#B3261E</item>
        <item name="colorErrorContainer">#F9DEDC</item>
        <item name="colorOnErrorContainer">#410E0B</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Surface / on-surface colors used by Material components -->
        <item name="colorSurface">@color/white</item>
        <item name="colorSurfaceVariant">#ECEFF1</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/black</item>

        <!-- Typography attrs referenced by XML layouts -->
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Material3.BodySmall</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Material3.BodyMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Material3.BodyLarge</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Material3.HeadlineSmall</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <style name="Theme.FGlutenApp.NoActionBar" parent="Theme.FGlutenApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FGlutenApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.FGlutenApp.NoActionBar</item>
    </style>

    <style name="Theme.FGlutenApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FGlutenApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Custom styles -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Trust level colors -->
    <color name="trust_expert_bg">#FF6B35</color>
    <color name="trust_expert_text">#FFFFFF</color>
    <color name="trust_verified_bg">#4CAF50</color>
    <color name="trust_verified_text">#FFFFFF</color>
    <color name="trust_trusted_bg">#2196F3</color>
    <color name="trust_trusted_text">#FFFFFF</color>
    <color name="trust_active_bg">#FF9800</color>
    <color name="trust_active_text">#FFFFFF</color>
    <color name="trust_new_bg">#9E9E9E</color>
    <color name="trust_new_text">#FFFFFF</color>
</resources>
